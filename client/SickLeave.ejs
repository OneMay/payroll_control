<%include  header.ejs %>
    <div class=" admin-content">
        <div class="daohang">
        </div>
        <div class="admin-biaogelist">

            <div class="listbiaoti am-cf">
                <ul class="am-icon-flag on"> 栏目名称</ul>

                <dl class="am-icon-home" style="float: right;"> 当前位置： 首页 > <a href="#">病假管理</a></dl>
                <dl>
                    <button type="button" class="am-btn am-btn-danger am-round am-btn-xs am-icon-plus"> 病假管理</button>
                </dl>
            </div>

            <div class="fbneirong">
                <form class="am-form">
                    <div class="am-form-group am-cf">
                        <div class="zuo">员工编号 </div>
                        <div class="you">
                            <select name="sex" id="employeeNo" class="am-input-sm SickLeave">
                             </select>
                        </div>
                    </div>
                    <div class="am-form-group am-cf">
                        <div class="zuo">病假开始日期</div>
